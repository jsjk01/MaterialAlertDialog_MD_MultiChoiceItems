<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/light_group">
        <ImageView
            android:id="@+id/light_first_floor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/light_off"
            android:layout_toStartOf="@id/light_second_floor"
            android:layout_marginEnd="20dp"/>
        <ImageView
            android:id="@+id/light_second_floor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/light_off"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/light_third_floor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/light_off"
            android:layout_toEndOf="@id/light_second_floor"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/light_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/light_group"
        android:layout_marginBottom="132dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一层"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_toStartOf="@id/light_text_middle"
            android:layout_marginEnd="50dp"/>
        <TextView
            android:id="@+id/light_text_middle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二层"
            android:textSize="24sp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三层"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_toEndOf="@id/light_text_middle"
            android:layout_marginStart="50dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/light_text">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/light_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="电灯开关"
            android:textSize="30sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/light_switch"
        tools:ignore="NotSibling">
        <TextView
            android:id="@+id/first_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"/>
        <TextView
            android:id="@+id/second_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"/>
        <TextView
            android:id="@+id/third_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"/>
    </RelativeLayout>

</RelativeLayout>